 <br>


<table class = "user-projects table">
<h3><%= "#{@user.name}'s Projects"%></h3>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Goal</th>
      <th>User</th>
      <th>Category</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody class = "all-projects-table-body">
    <% @user_projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.date.strftime("%d/%m/%y - %I:%M:%S %p") %></td>
        <td><%= project.goal %></td>
        <td><%= project.user.name %></td>
        <td><%= project.category.name %></td>
        <td><%= project.description %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<table class = "table user-pledges">
  <h3 class="tt"> <%= "#{@user.name}'s Pledges"%> </h3>
  <thead>
  <tr>
    <th>Amount</th>
    <th>project</th>
    <th></th>
  </tr>
  </thead>

  <tbody class="pled">
    <% @user_pledges.each do |pledge| %>
    <tr>
      <td><%= pledge.amount %></td>
      <td><%= Project.find(pledge.project_id).name %></td>
    <% end %>
    </tr>
  </tbody>
<table>
  <h3>Rewards</h3>
  <thead>
  <tr>
    <th>Description</th>
  </tr>
  </thead>
  <tbody class="rew">
    <% @rewards.each do |reward| %>
    <tr>
      <td><%= reward %> </td>
    </tr>
    <% end %>
  </tbody>
</table>
</body>
