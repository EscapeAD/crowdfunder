<!DOCTYPE html>
<html>
  <head>
    <title>Crowdfunder</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

  </head>

  <body>
    <div class='container'>
  <div>
    <span class = "userinfo">
         <% if current_user %>
           <span id = "welcome-message"> Signed in as <%= link_to "#{current_user.name}", user_path(current_user) %></span> |
           <span id = "log-out-button"><%= link_to "Log out", session_path("current"), :method => :delete %></span>
         <% else %>
           <span id = "log-in-button"><%= link_to "Log In", new_session_path %></span> |
           <span id = "sign-up-button"><%= link_to "Sign Up", new_user_path %></span>
         <% end %>
     </span>
  </div>


    <% if flash[:notice] %>
      <p id="notice"><%= flash[:notice] %></p>
    <% end %>

    <% if flash[:alert] %>
      <p id="alert"><%= flash[:alert] %></p>
    <% end %>


    <%= yield %>


  </div>
  </body>
</html>
