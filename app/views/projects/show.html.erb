<p class="notice"><%= notice %></p>
<%= link_to 'Back to Projects', projects_path %>
<% if current_user %>
| <%= link_to 'Edit Current Project', edit_project_path(@project) %>
<% end %>


<h1><%= @project.name %></h1>

<div class='thumbnail'>
<p>
  <strong>Date:</strong>
  <%= @project.date %></br>
  <strong><%= Project.get_countdown_time(@project) %></strong>
</p>

<p>
  <strong>Goal:</strong>
  <%= @project.goal %>
</p>

<p>
  <strong>User:</strong>
  <%= @project.user.name %>
</p>

<p>
  <strong>Category:</strong>
  <%= @project.category.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @project.description %>
</p>
</div>
<%= link_to 'Create pledge', new_project_pledge_path(@project), class: 'btn btn-success pledge-btn',id: @project.id %>
<div class='container' id='pledge-form'></div>
